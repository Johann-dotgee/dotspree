<h4><%= t(:new_video) %></h4>
<%= form_for [:admin, @product, @video], :html => { :multipart => true } do |f| %>
  <table class="basic-table" data-hook="new_video">
    <%= render :partial => 'form', :locals => { :f => f } %>
  </table>
  <p class="form-buttons" data-hook="buttons">
    <%= button t(:update) %>
    <%= t(:or) %> <%= link_to t(:cancel), admin_product_videos_url(@product), :id => 'cancel_link' %>
  </p>
<% end %>


<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    event.preventDefault();
    jQuery('#new_video_link').show();
    jQuery('#videos').html('');
  });  
 
</script>

 
 
